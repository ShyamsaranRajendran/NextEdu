<%- include('../layouts/header') %>
<link rel="stylesheet" href="/css/all-category.css">
<div class="container-4">
    <div class="left-panel">
        <h2>Fields of Study</h2>
        <ul class="field-list" id="fieldsOfStudy">
            <% categorys.forEach(function(category) { %>
                <li id="<%= category._id %>" class="category" data-field="<%= category.slug %>"><%= category.txt1 %></li>
                <li id="<%= category._id %>" class="category" data-field="<%= category.slug %>"><%= category.txt2 %></li>
                <li id="<%= category._id %>" class="category" data-field="<%= category.slug %>"><%= category.txt3 %></li>
          <% }); %>
        </ul>
        <button class="show-more">+ Show more fields</button>
        
        <h2>Study format</h2>
        <ul class="study-format-list field-list" id="studyFormats">
            <li class="format" data-format="On-Campus">On-Campus (63099)</li>
            <li class="format" data-format="Distance Learning">Distance Learning (12733)</li>
            <li class="format" data-format="Blended">Blended (2577)</li>
        </ul>
    
        <h2>Duration</h2>
        <ul class="duration-list field-list" id="durations">
            <li class="duration" data-duration="3 years">3 years (15248)</li>
            <li class="duration" data-duration="1 year">1 year (14596)</li>
            <li class="duration" data-duration="2 years">2 years (12560)</li>
        </ul>
    
        <h2>Study pace</h2>
        <ul class="study-pace-list field-list" id="studyPaces">
            <li class="pace" data-pace="Full time">Full time (44156)</li>
            <li class="pace" data-pace="Part time">Part time (14420)</li>
        </ul>
    
        <h2>Languages</h2>
        <ul class="language-list field-list" id="languages">
            <li class="language" data-language="English">English (69734)</li>
            <li class="language" data-language="Spanish">Spanish (4308)</li>
            <li class="language" data-language="French">French (974)</li>
            <li class="language" data-language="Portuguese">Portuguese (953)</li>
            <li class="language" data-language="Italian">Italian (637)</li>
        </ul>
    </div>
    
    
