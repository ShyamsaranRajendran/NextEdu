<%- include('../layouts/header') %>

<link rel="stylesheet" href="/css/community.css">
<div class="container-003">
    <h1>Student Community</h1>
    <br><br><br><br>
    <div id="chatBox" class="chat-box">
        <div class="chatMessages">
            <% community.forEach(function(message) { %>
                <div class="messageContainer <% if (message.username === currentUser) { %>right<% } else { %>left<% } %>">
                    <div class="logo">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><path d="m18 5.414 1.707-1.707-1.414-1.414-1.563 1.562C15.483 2.708 13.824 2 12 2s-3.483.708-4.73 1.855L5.707 2.293 4.293 3.707 6 5.414A6.937 6.937 0 0 0 5 9H3v2h2v2H3v2h2c0 3.86 3.141 7 7 7s7-3.14 7-7h2v-2h-2v-2h2V9h-2a6.937 6.937 0 0 0-1-3.586zM15 15H9v-2h6v2zm0-4H9V9h6v2z"></path></svg>
                        <br><br>
                    </div>
                   
                    <div class="userInfo">
                        <div class="username">
                            <%= message.username %>
                            <br><br>
                        </div>
                        

                        <div class="timestamp">
                            <%= message.time %>
                        </div>
                    </div>
                    <div class="messageContent">
                        <div class="description">
                            <%= message.desc %>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
        <div id="chatInput" class="chat-input">
            <form id="messageForm" action="/community" method="POST">
                <input type="text" id="desc" name="desc" placeholder="Type your message..." required>
                <input type="hidden" name="communityId" value="<%= id %>">
                <button type="submit">Send</button>
            </form>
        </div>
    </div>
</div>
<br><br><br><br>
<br>

<%- include('../layouts/footer') %>